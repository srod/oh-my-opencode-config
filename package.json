{
  "name": "oh-my-opencode-config",
  "version": "0.1.0",
  "description": "Interactive CLI for managing model assignments in oh-my-opencode.json",
  "type": "module",
  "bin": {
    "oh-my-opencode-config": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/srod/oh-my-opencode-config.git"
  },
  "homepage": "https://github.com/srod/oh-my-opencode-config",
  "keywords": [
    "opencode",
    "config",
    "cli",
    "ai",
    "agent",
    "model",
    "oh-my-opencode"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "bun run --hot src/index.ts",
    "test": "NO_COLOR=1 bun test",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format src",
    "format:fix": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/node": "^25.1.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "execa": "^9.6.1",
    "zod": "^4.3.6"
  }
}
